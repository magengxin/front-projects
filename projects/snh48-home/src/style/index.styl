@import "common/common.styl"
@import "common/sprite.styl"

a.btn
    display: inline-block
    text-decoration: none
    text-align: center

$tt = translate3d(px(580), px(-380), px(-1600))
$tt2 = translate3d(px(-299), px(-170), px(-800))
$tt3 = translate3d(px(299), px(-170), px(-800))

@keyframes f2b {
    0% {
        transform translate3d(0, 0, 0)
    }
    40% {
        transform translate3d(px(-199), px(-170), px(-800))
    }
    80% {
        transform translate3d(px(99), px(-170), px(-800))
    }
    100% {
        transform $tt
    }
}

@keyframes b2f {
    0% {
        transform $tt
    }
    40% {
        transform translate3d(px(499), px(-170), px(-800))
    }
    100% {
        transform translate3d(0, 0, 0)
    }
}

.top_bar
    position: absolute
    display: none

$nav-top = px(40)
.view-index
    abs-top 0
    left 0
    overflow: hidden

    width 100%
    height 100%

    .swiper-slide
        cursor: url('../image/pointer.png'), auto

    &.show-footer
        .footer,
        .swiper
            transform: translate3d(0, px(-223), 0)

        @media all and (max-width: 1440px)
            .footer,
            .swiper
                transform: translate3d(0, px(-253), 0)

    .swiper
        overflow: hidden
        z-index: 2
        width 100%
        height 100%
        transition: transform 400ms

    .section
        overflow: hidden
        width 100%
        height 100%

        &:before, &:after
            content: " "
            abs-top px(-13)
            left 0
            width 100%
            height px(26)
            bg-img('line.png', 100%, 100%)

        &:after
            top auto
            bottom px(-13)

        &.section1
            margin-top $nav-top
            height "calc(100% - %s)" % $nav-top

            .top_bar
                position: absolute
                display: block

            &:before
                content: none

        &.section4
            &:after
                content: none

    .icon-logo
        margin px(10) 0 0 2%

    .icon-go-down,
    .icon-btn-call,
    .icon-play
        z-index: 2
        abs-bottom px(40)
        left 0
        right 0
        margin auto

    .icon-btn-call
        bottom px(110)

    .icon-slogan
        abs-bottom px(210)
        right 0
        margin auto

        background-repeat: no-repeat

    .icon-play
        bottom px(260)
        left 50%
        margin-left px(320)

    for $i in (1..5)
        .section{$i}
            bg-img('section' + $i + '.jpg', cover)
            background-position: center top

    .swiper-button-disabled
        filter: saturate(70%) opacity(.6)

    .section2

        .up-videos
            text-align center

            &[data-tag='v']
