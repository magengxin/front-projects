            left 0
            right 0
            top 0
            bottom 0
            margin auto
            padding px(30)
            width px(480)
            height px(340)

            border 1px solid #fff
            border-radius: px(14)
            text-align: center
            font-size: px(16)
            background #8aecfd

            .title
                font-size: px(58)
                color #c56b94

            span
                color #c56b94

            p
                margin px(10) 0

            .ok
                display: inline-block
                padding 0 px(36)
                margin px(30) 0 0
                height px(48)
                line-height: @height
                border-radius: px(8)
                border 1px solid #3c929d

                text-decoration: none
                font-size: px(18)

                background #ff9ac9
                color #7e2951

    .footer
        abs-top 100%
        padding-bottom px(10)
        width 100%
        transition: transform 400ms