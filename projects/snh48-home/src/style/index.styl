                .icon-btn-video-v
                    display block !important

            &[data-tag='s']
                .snapshots,
                .icon-btn-video-s
                    display block !important

            .icon-btn-to-up
                abs-right px(20)
                top px(12)

            .video-btns
                abs-left 0
                width px(423)
                height px(61)

            .up-video-img-btns
                > div
                    display none
                    abs-left 0

            .btn-up-video,
            .btn-snapshots
                z-index 2
                abs-left 0
                width 50%
                height 100%

            .btn-snapshots
                left 50%

            .videos
                display none
                margin px(146) px(-7) 0
                text-align center

            .snapshots
                display none
                position relative
                margin px(146) auto 0
                padding 0 px(20)
                text-align center

                .icon-s-arrow-left,
                .icon-s-arrow-right
