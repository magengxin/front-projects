                > img
                    width px(51)

            .a-on
                display: none

        .icon-table1
            margin px(70) 0 px(8) px(8)
            padding px(28)

            .table
                overflow: hidden
                border 1px solid #dad993
                border-radius: px(10)

            table

                width 100%
                border-collapse: collapse

                th, td
                    max-width: 100%
                    overflow: hidden
                    text-overflow: ellipsis

                    border 1px solid #dad993

                    &.first
                        white-space: nowrap;
                        width px(130)

                    &.last
                        white-space: nowrap;
                        max-width px(190)

                th
                    width px(60)
                    height px(50)

                    font-size: px(16)
                    color #b45299
                    background #eeedb5

                td
                    padding 0 px(10)

                    color #626262
                    background #f7f6c4

        .icon-table2
            padding: px(39) px(42) 0
            white-space: nowrap

            .skill
                display: inline-block
                vertical-align: top
                margin 0
                overflow: hidden
                width px(120)
                height px(143)
                border-radius: px(18)

                filter: brightness(.8)

                transition: transform 140ms

                &:hover,
                &.active
                    filter: brightness(1)

            .desc
                abs-bottom px(38)
                font-size: px(16)
                left px(45)
                color #626262
                max-width: px(470)
                overflow: hidden
                text-overflow: ellipsis
                white-space: nowrap

    .girls
        height 100%

        .swiper-wrapper
            z-index: 10

        .girl
            height 100%

        .image
            abs-right 54%
            top 6%
            bottom 12%
            margin auto

            max-width px(752)
            min-width 490px
            width 40%
            height 82%
            perspective: px(1200)

            > img
                z-index: 2
                abs-top 0
                right 0
                height 100%
                width auto
                max-width: none

            .kt
                z-index: 1
                transform $tt
                transform-origin: right top

            .real
                animation b2f 400ms forwards

            .kt
                animation f2b 400ms forwards

            &.active
                .real
                    z-index: 1
                    transform $tt
                    transform-origin: right top

                    animation f2b 300ms forwards

                .kt
                    animation b2f 300ms forwards

    .icon-turn
        z-index: 10
        abs-right 53%
        top 32%

    .girls-board
        z-index: 120
        abs-bottom px(35)
        left 0
        right 0
        margin auto
        max-width px(1550)
        height px(180)

