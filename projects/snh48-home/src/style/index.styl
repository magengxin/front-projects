            bottom 0
        }

        .mask
            overflow: hidden
            height px(180)

        .wrapper
            margin auto
            width px(998)
            height px(240)
            white-space: nowrap
            overflow-y: hidden
            overflow-x: auto
            user-select: none

        .tab
            display: inline-block
            vertical-align: top
            margin 0 px(3)
            width px(160)
            height px(180)
