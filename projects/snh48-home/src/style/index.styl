            .more
                abs-right px(30)
                top px(120)

                width px(26)
                height @width
                line-height @height
                border-radius px(4)

                text-decoration none
                font-size px(24)
                color #fff
                background #ce6cb3

            .video
                overflow hidden
                position relative
                display inline-block
                vertical-align top
                margin 0 px(7)
                width px(262)
                height px(148)
                cursor pointer

                border-radius px(6)
                border 1px solid #fff

                background-repeat no-repeat
                background-size cover
                background-position center

                &:before
                    content: " "
                    abs-center()
                    top 0
                    bottom 0
                    margin auto

                    width px(49)
                    height @width
                    bg-img('play-video.png')

                    transition all .5s
                    transform rotate(0)

                &:hover
                    &:before
                        transform rotate(360deg)

        .icon-up-video-board
            overflow hidden
            position relative
            margin px(40) auto 0
            font-size px(12)

        .new-board
            display flex
            justify-content space-between
            align-items start
            align-content start

            margin px(120) auto 0
            width px(1260)
            height px(320)

            > *
                margin 0 px(4)

        .connect-us
            flex auto 1 0
            width px(270)
            height 100%
            border-radius px(20)

        .share
            z-index: 2
            position relative

            width px(270)

            border-radius px(20)
            background #ffe0f6
            border px(2) solid #fff

            .title
                margin px(19) 0 0 px(20)

                font-size px(16)
                font-weight bold
                color #704281

            .icon-share-girl
                z-index -1
                abs-right px(-80)
                top px(-60)

            .icon-ercode
                abs-top px(50)
                left px(18)

            .light
                abs-top px(44)
                left px(12)
                right auto
                margin auto
                width px(148)
                height px(16)

                background url('../image/light.png') center no-repeat
                background-size 100% 100%

                animation: up-down 1.6s infinite linear both

            h2
                margin-top px(150)
                margin-bottom px(10)
                margin-left px(18)
                font-size: px(16)
                color #704281
                font-weight: normal
                text-align: left

            .share-link
                margin 0 px(-3) 0 px(15)
                text-align left
                a
                    display: inline-block
                    margin 0 px(3)
                    width px(45)

                .to-qq
                    float none

            .kefu-wrapper
                padding 0 px(18)
                height px(46)
                overflow hidden

                .swiper-wrapper
                    transition-timing-function: linear !important

            .kefu
                overflow auto
                height px(100)
                margin-top px(10)
                white-space nowrap
                width 100%

                p
                    display inline-block
                    margin px(10) 0
                    font-size px(12)
                    line-height 1
                    color #704281

                .label
                    font-size px(14)

                @media all and (max-width: 1440px)
                    margin-top px(14)

                    p
                        margin px(8) 0

    .icon-title-news,
    .icon-title-girl,
    .icon-title-game
        z-index: 30
        abs-center()
        top px(35)

    .icon-news-board
        margin auto
        height 100%

        border-radius px(20)
        background #fff

    .nav-tabs
        z-index: 10
        abs-top 50%
        left auto
        right 14%
        margin-top px(-80)

        .icon-star
            margin auto

        .tab
            position: relative
            display: block
            margin px(20) 0

            .icon-star
                abs-top 100%
                left 0
                right 0
                margin auto

                &.first
                    top auto
                    bottom 100%

    .icon-news-board
        padding 0

    $main-color = #a85092

    .news-tabs
        font-size: 0
        background #ff94ce
        border-radius px(42)
        .tab
            overflow hidden
            z-index: 2
            position: relative
            display inline-block
            margin-bottom -1px
            width px(90)
            height px(42)
            line-height: @height
            border-bottom 1px solid transparent

            font-size: px(20)
            text-align: center
            text-decoration: none

            color $main-color

            transition all .1s

            &:hover, &.active
                text-decoration: none
                color #a85092
                transform translateY(px(6))

                &:after
                    content: " "
                    abs-top px(0)
                    left 10%
                    width 80%
                    height 100%
                    z-index -1
                    border-top-left-radius px(10)
                    border-top-right-radius px(10)
                    background #fff

                &:before
                    content: " "
                    abs-right px(5)
                    top auto
                    bottom 0
                    width 50%
                    height 80%
                    background rgba(0, 0, 0, .2)
                    z-index -2
                    transform rotate(-14deg)

        .more
            display: inline-block
            margin px(8) px(20) 0 0
            width px(20)
            height @width
            line-height: @height
            border-radius: px(4)

            font-size: px(30)
            text-align: center
            text-decoration: none

            color #fff

    .news-content
        padding px(18) px(24)

        > div
            display: none

        &[data-tag="latest"]
            .latest
                display block

        &[data-tag="news"]
            .news
                display block

        &[data-tag="gg"]
            .gg
                display block

        &[data-tag="gl"]
            .gl
                display block

        a
            position: relative
            display: block
            padding 0 px(100) 0 px(50)
            height px(48)
            line-height @height

            text-decoration: none
            font-size px(16)
            color #626262

            span
                display: block
                white-space: nowrap;
                max-width: px(320)
                overflow: hidden
                text-overflow: ellipsis

            &:before
                content attr(data-tag)
                abs-left 0
                top 0
                bottom 0
                margin auto
                width px(42)
                height px(20)
                line-height: @height
                border-radius: px(8)

                font-size: px(16)
                text-align: center
                color #fff
                background $main-color

            &:after
                content attr(data-date)
                abs-right 0
                top 0
                bottom 0
                margin auto
                width px(100)
                height px(20)
                line-height: @height
                border-radius: px(8)

                font-size: px(16)
                text-align: right
                color @color

            &:hover
                color lighten(@color, 20%)

